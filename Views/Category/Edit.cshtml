@model futblog.Models.Category

@{
    ViewBag.Title = "Editar Categoría";
}

<div class="container mt-4">
    <h2 class="text-center">Editar Categoría</h2>
    <div class="card shadow" style="width: 600px; margin: auto;">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input asp-for="Id" value="@Model.Id" hidden />
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nombre de la Categoría</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Actualizar Categoría</button>
            </form>

            <div class="mt-3 text-center">
                <a href="@Url.Action("Index", "Categories")" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
